<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.detail.DetailActivity">
<TextView
    android:id="@+id/title_tv"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_marginTop="@dimen/spacing_huge_32"
    android:textColor="#1625B1"
    android:textSize="30sp"
    android:textAlignment="center"
    android:textStyle="bold"
    android:text="dscjks"/>

<TextView
    android:id="@+id/description_tv"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@+id/title_tv"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    android:paddingLeft="@dimen/spacing_normal_16"
    android:layout_margin="@dimen/spacing_normal_16"
    android:textSize="20sp"
    android:textColor="#81C0E5"
    android:fontFamily="sans-serif-medium"
    android:text="dscjks"/>

    <TextView
        android:id="@+id/user_id_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/user_tv"
        app:layout_constraintBottom_toBottomOf="@+id/user_tv"
        android:text="0"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/user_tv"
        android:layout_marginEnd="@dimen/spacing_small_8"
        />

    <TextView
        android:id="@+id/user_tv"
        android:text="- user"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="@dimen/spacing_normal_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>